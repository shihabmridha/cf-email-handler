{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "strict": true,
    "noEmit": true,
    "pretty": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "lib": [
      "esnext"
    ],
    "paths": {
      "@/shared/*": [
        "../shared/*"
      ]
    },
  },
  "exclude": [
    "node_modules",
    "dist",
  ],
  "include": [
    "src",
    "tests",
    "setup.ts",
    "migration.ts",
    "*.d.ts"
  ]
}